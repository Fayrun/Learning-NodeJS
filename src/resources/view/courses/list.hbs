<div class="container-middle">
  <div class="container-fluid px-4 mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1 class="anime-text-title">Danh sách Anime</h1>
      <a href="/courses/create" class="btn btn-primary">+ Thêm mới</a>
    </div>

    {{#if searchQuery}}
      <p style="color:#aaa; font-size:0.9rem; margin-bottom:1rem;">
        Ket qua tim kiem cho:
        <strong style="color:#f0c040;">{{searchQuery}}</strong>
        — Tim thay
        {{courses.length}}
        ket qua
        <a
          href="/courses"
          style="color:#aaa; margin-left:1rem; font-size:0.85rem;"
        >[Xoa tim kiem]</a>
      </p>
    {{/if}}

    <div class="row row-cols-2 row-cols-sm-3 row-cols-md-4 row-cols-lg-5 g-3">
      {{#each courses}}
        <div class="col">
          <div class="anime-card">
            <div class="anime-thumb">
              <a href="/courses/{{this.slug}}">
                <img src="{{this.image}}" alt="{{this.name}}" />
              </a>
              <div class="anime-badge-ep">TẬP<br /><strong
                >{{this.numberOfEpisodes}}</strong></div>
              <div class="anime-year-bar">{{this.releaseYear}}</div>
              <div class="anime-action-btns">
                <a
                  href="/courses/{{this._id}}/edit"
                  class="anime-action-btn edit"
                  title="Sua"
                >
                  <i class="bi bi-pencil-fill"></i>
                </a>
                <button
                  class="anime-action-btn delete"
                  title="Xoa"
                  onclick="deleteCourse('{{this._id}}')"
                >
                  <i class="bi bi-trash-fill"></i>
                </button>
              </div>
            </div>
            <div class="anime-info">
              <p class="anime-title">{{this.name}}</p>
              <div class="anime-genres">
                {{#each this.Genre}}
                  <span class="anime-genre-badge">{{this}}</span>
                {{/each}}
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>

  </div>
</div>

<script src="/js/delete_course.js"></script>