<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h1 class="mb-4">Thêm mới Anime</h1>
      <form method="POST" action="/courses">
        <div class="mb-3">
          <label for="name" class="form-label">Tên Anime</label>
          <input
            type="text"
            class="form-control"
            id="name"
            name="name"
            required
          />
        </div>

        <div class="mb-3">
          <label for="description" class="form-label">Mô tả</label>
          <textarea
            class="form-control"
            id="description"
            name="description"
            rows="4"
            required
          ></textarea>
        </div>

        <div class="mb-3">
          <label for="image" class="form-label">Image URL</label>
          <input
            type="text"
            class="form-control"
            id="image"
            name="image"
            required
          />
        </div>

        <div class="mb-3">
          <label for="videoUrl" class="form-label">Video ID </label>
          <input
            type="text"
            class="form-control"
            id="videoUrl"
            name="videoUrl"
            required
          />
        </div>

        <div class="mb-3">
          <label for="slug" class="form-label">Slug</label>
          <input
            type="text"
            class="form-control"
            id="slug"
            name="slug"
            required
          />
        </div>

        <div class="d-grid gap-2">
          <button type="submit" class="btn btn-primary">Create Course</button>
          <a href="/courses" class="btn btn-secondary">Cancel</a>
        </div>
      </form>

    </div>
  </div>
</div>