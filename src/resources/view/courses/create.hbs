<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h1 class="mb-4">Thêm mới Anime</h1>

      <form id="create-form">
        <div class="mb-3">
          <label for="name" class="form-label">Tên Anime</label>
          <input
            type="text"
            class="form-control"
            id="name"
            name="name"
            required
          />
        </div>

        <div class="mb-3">
          <label for="description" class="form-label">Mô tả</label>
          <textarea
            class="form-control"
            id="description"
            name="description"
            rows="4"
            required
          ></textarea>
        </div>

        <div class="mb-3">
          <label for="image" class="form-label">Image URL</label>
          <input type="text" class="form-control" id="image" name="image" />
        </div>

        <div class="mb-3">
          <label for="videoId" class="form-label">Video ID</label>
          <input type="text" class="form-control" id="videoId" name="videoId" />
        </div>

        <div class="mb-3">
          <label for="Genre" class="form-label">Thể loại</label>
          <select class="form-select" id="Genre" name="Genre" required>
            <option value="" disabled selected>-- Chọn thể loại --</option>
            <option value="Action">Action</option>
            <option value="Shounen">Shounen</option>
            <option value="Romance">Romance</option>
            <option value="Mecha">Mecha</option>
            <option value="Isekai">Isekai</option>
            <option value="Harem">Harem</option>
            <option value="Adventure">Adventure</option>
            <option value="School">School</option>
            <option value="Slice of life">Slice of life</option>
            <option value="Horror">Horror</option>
          </select>
        </div>

        <div class="d-grid gap-2">
          <button type="submit" id="submit-btn" class="btn btn-primary">Create
            Anime</button>
          <a href="/courses" class="btn btn-secondary">Cancel</a>
        </div>

        <div id="toast" class="alert d-none mt-3" role="alert"></div>
      </form>
    </div>
  </div>
</div>

<script src="/js/create_courses.js"></script>